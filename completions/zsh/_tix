#compdef _tix tix

# Docs - http://zsh.sourceforge.net/Doc/Release/Completion-System.html#Completion-System

function _tix {
    local line

    _arguments -C \
        '1: :(plan quick)' \
        '*::arg:->args'

    case $line[1] in
            plan)
                _plan
            ;;
    esac

    case $line[1] in
            quick)
                 _quick
            ;;
    esac

    case $line[1] in
            *)
                _default
            ;;
    esac
}

function _plan {
   _arguments '-d[prints out ticket information instead of creating tickets]' \
    '-h[prints help]' \
    '--include=[optional name of configuration to include]' \
     '::optional arg:_files'
}

function _quick {
   _arguments '-d[prints out ticket information instead of creating tickets]' \
    '-h[prints help]' \
    '--include=[optional name of configuration to include]' \
     '::optional arg:_files'
}

function _default {
    _arguments '-d[prints out ticket information instead of creating tickets]' \
        '-h[prints help]' \
        '--version[prints out tix version]' \
        '--include=[optional name of configuration to include]' \
        '::optional arg:_files'
}
